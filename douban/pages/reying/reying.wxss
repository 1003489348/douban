/* top250样式 */
.wrap{
  width: 100%;
  background-color: #ccc;
}
.banner{
  width: 100%;
  height: 480rpx;
}
.banner image {
  width: 100%;
}
.top250-t, .top250-b{
  width: 100%;
  background-color: #fff;
}
.top250-b{
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}
.top250-t .top250-title{
  width: 90%;
  margin: 0 auto;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #ccc;
}
.top250-t .top250-title text{
  float: left;
  display: inline-block;
  color: #333;
  height: 100%;
  border-bottom: 2px solid #ccc;
}
.top250-t .top250-title button{
  width: 240rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #333;
  background: #f90;
  float: right;
  border-radius: 40rpx;
  margin-top: 20rpx;
}

.top250-list{
  width: 90%;
  padding-top: 40rpx;
  margin: 0 auto;
  overflow: hidden;
}
.top250-list .pai{
  width: 70rpx;
  height: 35rpx;
  padding: 10rpx;
  text-align: center;
  line-height: 35rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  background-color: rgb(255, 187, 60);
  color: rgb(105, 64, 2);
}
.top250-list .list-l{
  width: 75%;
  float: left;
  overflow: hidden;
  border-right: 1px dashed #ccc; 
}
.top250-list .list-l image{
  width: 35%;
  height: 250rpx;
  border-radius: 10rpx;
  float: left;
}
.top250-list .list-l .text{
  width: 50%;
  color: #333;
  font-size: 26rpx;
  float: left;
  margin-left: 40rpx;
}
.top250-list .list-l .text text{
  display: block;
}
.top250-list .list-l .text text:nth-child(1){
  font-weight: 500;
  font-size: 34rpx;
  color: #111;
}
.list-r{
  float: right;
  width: 20%;
}
.list-b{
  width: 100%;
  height: 80rpx;
  color: rgb(168, 168, 168);
  float: left;
  margin-top: 30rpx;
  font-size: 24rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}