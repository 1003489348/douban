.top {
	width: 100%;
	height: 400rpx;
	background-size: 100% 100%;
}

.top1 {
	width: 100%;
	height: 100%;
	margin: 0 auto;
	display: flex;
	justify-content: center;
	align-items: center;
}

.top1 button {
  width:360rpx;
	background-color: #eee;
  color: #000;
	letter-spacing: 10rpx;
  font-size: 34rpx;
	border: none;
  text-align: center;
}
.content1{
  width: 95%;
  margin: 0 auto;
  font-size: 36rpx;
  letter-spacing: 2rpx;
  color: #000;
  margin-top: 20rpx;
}
.content1 view:nth-child(1){
  float: left;
}
.content1 view:nth-child(2){
  float: right;
  font-size: 28rpx;
  color: #ccc;
  letter-spacing: 4rpx;
}
.content1 van-icon{
  float: right;
  position: relative;
  top: 8rpx;
  padding-left: 10rpx;
}
.content2{
  position: relative;
  top: 20rpx;
  width: 95%;
  margin: 0 auto;
  display: flex;
  margin-bottom: 25rpx;
}
.content2_left{
  width: 15%;
}
.content2_left image{
  width: 60rpx;
  height: 60rpx;
  margin-top: 30rpx;
}
.content2_right{
  width: 90%;
  font-size: 26rpx; 
  border-bottom: 2rpx solid #ccc;
  padding-bottom: 20px;
}
.content2_right2{
  color: #ccc;
}
.content2_right3 button{
  background: rgb(218, 215, 215);
  font-weight: 700;
}